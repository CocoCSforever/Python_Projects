import random


def main():
    sent = input("Enter a sentence:").lower() .split(' ')
    tkns = zip(range(len(sent)), zip(sent, [len(wd) for wd in sent]))
    for t in tkns:
        print(t[1][0])
    # for t in range(len(sent)):
    #     print(f" ({t}, ({sent[t]}, {len(sent[t])})")
    tuple = ('a', 5)
    print(tuple)
    # print the tuple itself: how it's stored in the memory
    # only when elements are in the object, will show the quote
    # if print the element, print out the value
    tuple1 = (tuple[0], 5)
    print(tuple1)
    print(f"({tuple1[0]},{tuple1[1]})")
    print(f"('{tuple1[0]}',{tuple1[1]})")
    print(f"({'a'},{'b'})")

    # m=[[random.randint(1,3) for _ in range(4)] for _ in range(2)]
    # m= [len(x) for x in ["hello", "world"]]
    # print(m)
    # for i in range(1,3):
    #     for j in range(i+2):
    #         print("1")


main()
